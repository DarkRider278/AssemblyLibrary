<Window x:Name="window" x:Class="GUIObj.Dialogs.TranslateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIObj.Dialogs"
        mc:Ignorable="d"
        Title="TranslateWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <DataGrid x:Name="dg_table" HorizontalAlignment="Left" Margin="10,10,0,35" Width="772" ItemsSource="{Binding TranslateList, ElementName=window, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding TKey}" Header="Key" Width="1*"/>
                <DataGridTextColumn Binding="{Binding TValue}" Header="Value" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_translate_save" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Btn_translate_save_Click"/>
        <Button x:Name="btn_translate_load" Content="Load" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="Btn_translate_load_Click"/>

    </Grid>
</Window>
