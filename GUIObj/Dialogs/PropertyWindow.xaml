<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:windows="clr-namespace:SoftFluent.Windows;assembly=SoftFluent.Windows"
        x:Class="GUIObj.Dialogs.PropertyWindow"
        Title="Property Window" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>

        <windows:PropertyGrid x:Name="pg_data" Margin="0,0,0,40"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Right" Margin="5,0,100,10" VerticalAlignment="Bottom" Width="75" Click="btn_ok_Click"/>
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,4,10" VerticalAlignment="Bottom" Width="75" Click="btn_cancle_Click"/>

    </Grid>
</Window>
