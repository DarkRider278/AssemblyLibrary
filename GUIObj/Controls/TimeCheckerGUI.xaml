<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUIObj.Controls"
             xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             x:Class="GUIObj.Controls.TimeCheckerGui"
             mc:Ignorable="d" Height="180" Width="275">
    <Grid>
        <GroupBox x:Name="gb_days" Header="Days" HorizontalAlignment="Left" Height="146" Margin="10,30,0,0" VerticalAlignment="Top" Width="123">
            <Border BorderBrush="Black" BorderThickness="1" Margin="0">
                <Grid>
                    <CheckBox x:Name="cb_day_monday" Content="Monday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,9,0,0" Click="Cb_day_monday_Click"/>
                    <CheckBox x:Name="cb_day_tuesday" Content="Tuesday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,24,0,0" Click="Cb_day_monday_Click"/>
                    <CheckBox x:Name="cb_day_wednesday" Content="Wednesday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,39,0,0" Click="Cb_day_monday_Click"/>
                    <CheckBox x:Name="cb_day_thursday" Content="Thursday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,54,0,0" Click="Cb_day_monday_Click"/>
                    <CheckBox x:Name="cb_day_friday" Content="Friday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,69,0,0" Click="Cb_day_monday_Click"/>
                    <CheckBox x:Name="cb_day_saturday" Content="Saturday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,84,0,0" Click="Cb_day_monday_Click"/>
                    <CheckBox x:Name="cb_day_sunday" Content="Sunday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,99,0,0" Click="Cb_day_monday_Click"/>
                </Grid>
            </Border>
        </GroupBox>
        <GroupBox x:Name="gbtime" Header="Time" HorizontalAlignment="Left" Height="146" Margin="133,30,0,0" VerticalAlignment="Top" Width="134">
            <Border BorderBrush="Black" BorderThickness="1" Margin="0">
                <Grid>
                    <Label x:Name="label_start" Content="Starttime" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="label_end" Content="Endtime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,51,0,0"/>
                    <local:SpinnerInt x:Name="iud_start_h" HorizontalAlignment="Left" Margin="4,22,0,0" VerticalAlignment="Top" Width="54" Value="15" MaxValue="23" ShowDefault="False" Height="20" OnValueChanged="iud_start_h_OnValueChanged"/>
                    <local:SpinnerInt x:Name="iud_start_m" HorizontalAlignment="Left" Margin="60,22,0,0" VerticalAlignment="Top" Width="54" Value="0" MaxValue="59" ShowDefault="False" Height="20" OnValueChanged="iud_start_m_OnValueChanged"/>
                    <local:SpinnerInt x:Name="iud_end_h" HorizontalAlignment="Left" Margin="6,73,0,0" VerticalAlignment="Top" Width="54" Value="23" MaxValue="23" ShowDefault="False" Height="20" OnValueChanged="iud_end_h_OnValueChanged"/>
                    <local:SpinnerInt x:Name="iud_end_m" HorizontalAlignment="Left" Margin="60,73,0,0" VerticalAlignment="Top" Width="54" Value="0" MaxValue="59" ShowDefault="False" Height="20" OnValueChanged="iud_end_m_OnValueChanged"/>
                </Grid>
            </Border>
        </GroupBox>
        <CheckBox x:Name="cb_check_days" Content="Check Days" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.211,0.422" IsChecked="True" Click="Cb_check_days_Click"/>
        <CheckBox x:Name="cb_check_time" Content="Check Time" HorizontalAlignment="Left" Margin="133,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.211,0.422" IsChecked="True" Click="Cb_check_time_Click"/>
    </Grid>
</UserControl>
